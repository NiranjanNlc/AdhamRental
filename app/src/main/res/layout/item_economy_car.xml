<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/ll_item_econmyCar"
    android:tag="cards main container">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="@color/white"
        card_view:cardCornerRadius="10dp"
        card_view:cardElevation="5dp"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <ImageView
                android:id="@+id/ivCarImage"
                android:tag="image_tag"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="0.5"
                android:src="@drawable/car"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tvEconomyCarName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Audi A5 Sports"
                    android:textColor="@color/textColor"/>
                <TextView
                    android:id="@+id/tvEconomyCarPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$800"
                    android:textColor="@color/darkRed"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical">
                    <ImageView
                       style="@style/icon_economy"
                        android:layout_marginEnd="5dp"
                        android:src="@drawable/ic_gear"/>
                    <TextView
                        android:id="@+id/tvEconomyCarManual"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/manual"
                        android:layout_marginEnd="7dp"/>
                    <ImageView
                        style="@style/icon_economy"
                        android:layout_marginEnd="5dp"
                        android:src="@drawable/ic_alarm"/>
                    <TextView
                        android:id="@+id/tvEconomyCarSeats"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/seats"
                        android:layout_marginEnd="7dp"/>
                    <ImageView
                        style="@style/icon_economy"
                        android:layout_marginEnd="5dp"
                        android:src="@drawable/ic_calender"/>
                    <TextView
                        android:id="@+id/tvEconomyCarModel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="2018"/>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>